{% extends '::base.html.twig' %}

{% block body %}

	<!-- Liste des maisons -->
	{% for house in houses %}
		<div class="personnage maison">
			<img src="{{ asset('bundles/omg/img/vide.png') }}">
			<div class="infos">
				<h2 class="ribbon">{{ house.getTitle() }}</h2>
				<a href="{{ path('omg_gethouse', {'id_house':house.getId()}) }}" target="_blank" class="button button_small">En savoir +</a>
				<a href="{{ path('omg_updatehouse', {'id_house':house.getId()}) }}" target="_blank" class="button button_small">Modifier</a>
				<a href="{{ path('omg_deletehouse', {'id_house':house.getId()}) }}" target="_blank">Supprimer</a>
			</div>
		</div>
	{% endfor %}
{% endblock %}